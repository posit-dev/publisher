{
  "name": "publisher",
  "displayName": "Positron Publisher",
  "description": "Publish your applications from Positron to Posit products",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rstudio/publishing-client/tree/main/extensions/positron"
  },
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Data Science",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "positron.publisher.assistant.open",
        "title": "Open Assistant",
        "category": "Publisher",
        "icon": {
          "light": "assets/icons/light.svg",
          "dark": "assets/icons/dark.svg"
        }
      }
    ],
    "configuration": {
      "title": "Positron",
      "properties": {
        "positron.publisher.executable.path": {
          "description": "A path to the Positron Publisher CLI executable. By default, the extension looks for `publisher` in the `PATH`",
          "type": "string"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == python",
          "command": "positron.publisher.assistant.open",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@types/wait-on": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "get-port": "5.1.1"
  }
}
