; Posit test/e2e configuration - simplified for with-connect
; Runtimes (R, Python, Quarto) are auto-discovered from the official Connect image

[Server]
Address = http://localhost:3939/
SenderEmail = no-reply@example.com
EmailProvider = print
DataDir = /var/lib/rstudio-connect
AllowConfirmedUsers = true
JumpStartEnabled = false

[SQLite]
Backup = false
ForeignKeyConstraints = true

[HTTP]
Listen = :3939
NoWarning = true

[Authentication]
Provider = password

[R]
Enabled = true

[Python]
Enabled = true

[Quarto]
Enabled = true

[Metrics]
Enabled = false

[RPackageRepository "CRAN"]
URL = "https://packagemanager.posit.co/cran/__linux__/jammy/latest"


